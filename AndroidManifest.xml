<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.example.mlbandroid"
      android:versionCode="1"
      android:versionName="1.0"
      android:installLocation="internalOnly">
    <application android:icon="@drawable/ic_launcher"
                 android:label="Awesomnium"
                 android:debuggable="true">
        <activity android:name=".MainActivity"
                  android:label="Awesomnium"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboard|keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:label="Life Cycle Test"
		          android:name=".LifeCycleTest"
		          android:configChanges="keyboard|keyboardHidden|orientation" />
        <activity android:label="Single Touch Test"
		          android:name=".SingleTouchTest"
		          android:configChanges="keyboard|keyboardHidden|orientation" />
        <activity android:label="Key Test"
		          android:name=".KeyTest"
		          android:configChanges="keyboard|keyboardHidden|orientation" />
        <activity android:label="Text File Test"
		          android:name=".AssetsTest"
		          android:configChanges="keyboard|keyboardHidden|orientation" />
		<activity android:label="External Storage Test"
		          android:name=".ExternalStorageTest"
		          android:configChanges="keyboard|keyboardHidden|orientation" />
		          
		<activity android:label="Sound Test"
		          android:name=".SoundPoolTest"
		          android:configChanges="keyboard|keyboardHidden|orientation" />	        
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-sdk android:minSdkVersion="3" android:targetSdkVersion="16"/>
</manifest>